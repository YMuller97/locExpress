<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocExpressMobile.MainPage"
             xmlns:viewmodel="clr-namespace:LocExpressMobile.ViewModels"
             xmlns:models="clr-namespace:LocExpressMobile.Models"
             x:DataType="viewmodel:MainViewModel">

    <Grid RowDefinitions="80, 50, Auto"
          ColumnDefinitions=".75*, .25*"
          Padding="10"
          RowSpacing="10">

        
        
        <Entry Placeholder="Search"
               Text="{Binding input}"
               Grid.Row="1"/>

        <Button Text="Search"
                Grid.Row="1"
                Grid.Column="1"
                Clicked="Refresh"/>

        <CollectionView Grid.Row="2" Grid.ColumnSpan="2"
                        ItemsSource="{Binding AdList}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:RentalAd">
                    <Label Text="{Binding Title}" TextColor="Black"></Label>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
                        

    </Grid>

</ContentPage>
